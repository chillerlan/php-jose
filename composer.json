{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "chillerlan/php-jose",
	"description": "A JWT/JWS/JWK/JWA implementation.",
	"license": "MIT",
	"type": "library",
	"keywords": ["jose", "jwt", "jws", "jwk", "jwa", "rfc7515", "rfc7517",  "rfc7518", "rfc7519", "rfc7520"],
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/chillerlan/php-jose/graphs/contributors"
		}
	],
	"funding": [
		{
			"type": "Ko-Fi",
			"url": "https://ko-fi.com/codemasher"
		}
	],
	"homepage": "https://github.com/chillerlan/php-jose",
	"support": {
		"issues": "https://github.com/chillerlan/php-jose/issues",
		"source": "https://github.com/chillerlan/php-jose"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": "^8.1",
		"ext-gmp": "*",
		"ext-openssl": "*",
		"ext-sodium": "*"
	},
	"require-dev": {
		"phan/phan": "^5.5.0",
		"phpmd/phpmd": "^2.15",
		"phpstan/phpstan": "^2.1.22",
		"phpstan/phpstan-deprecation-rules": "^2.0.3",
		"phpunit/phpunit": "^10.5",
		"slevomat/coding-standard": "^8.19",
		"squizlabs/php_codesniffer": "^3.13"
	},
	"suggest": {
		"chillerlan/php-oauth": "A fully transparent, framework agnostic PSR-18 OAuth client."
	},
	"autoload": {
		"psr-4": {
			"chillerlan\\JOSE\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"chillerlan\\JOSETest\\": "tests"
		}
	},
	"scripts": {
		"phan": "@php vendor/bin/phan",
		"phpcs": "@php vendor/bin/phpcs",
		"phpstan": "@php vendor/bin/phpstan",
		"phpstan-baseline": "@php vendor/bin/phpstan --generate-baseline",
		"phpunit": "@php vendor/bin/phpunit"
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"platform-check": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
